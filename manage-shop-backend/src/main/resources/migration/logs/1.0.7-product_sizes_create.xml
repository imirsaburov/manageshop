<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet
            id="product_sizes_create"
            author="imirsaburov">

        <createTable
                tableName="product_sizes">
            <column
                    name="id"
                    type="BIGINT"
                    autoIncrement="true">
                <constraints
                        primaryKey="true"
                        nullable="false"/>
            </column>

            <column
                    name="created_by"
                    type="BIGINT"/>

            <column
                    name="modified_by"
                    type="BIGINT"/>

            <column
                    name="created_at"
                    type="TIMESTAMP"/>

            <column
                    name="modified_at"
                    type="TIMESTAMP"/>

            <column
                    name="deleted"
                    type="BOOLEAN"
                    defaultValueBoolean="false"/>

            <column
                    name="product_id"
                    type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>

            <column
                    name="size_id"
                    type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>

            <column
                    name="count"
                    type="BIGINT"/>

            <column
                    name="sold_count"
                    type="BIGINT"/>

        </createTable>

        <addForeignKeyConstraint baseTableName="product_sizes"
                                 baseColumnNames="created_by"
                                 constraintName="fk_product_sizes_created_by_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="product_sizes"
                                 baseColumnNames="modified_by"
                                 constraintName="fk_product_sizes_modified_by_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>


        <addForeignKeyConstraint baseTableName="product_sizes"
                                 baseColumnNames="product_id"
                                 constraintName="fk_product_sizes_product_id_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="product_sizes"
                                 baseColumnNames="size_id"
                                 constraintName="fk_product_sizes_size_id_users_id"
                                 referencedTableName="permissions"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>